<h1>Welcome to the new product form.</h1>
<h2>Please complete to continue:</h2>

<%= form_tag '/products', method: :post do %>
  <div>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  </div>
  <div>
  <%= label_tag :price %>
  <%= text_field_tag :price %>
  </div>
  <div>
  <%= label_tag :description %>
  <%= text_field_tag :description %>
  </div>
  <div>
  <%= label_tag :supplier_id %>
  <%= text_field_tag :supplier_id %>
  </div>
  <div>
  <%= label_tag :image_url %>
  <%= text_field_tag :image_url %>
  </div>
  <%= submit_tag 'Submit This!!' %>
<% end %>