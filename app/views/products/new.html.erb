<h1>Welcome to the new product form.</h1>
<h2>Please complete to continue:</h2>

<%= form_tag '/products', method: :post do %>
  <div>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  </div>
  <div>
  <%= label_tag :price %>
  <%= text_field_tag :price %>
  </div>
  <div>
  <%= label_tag :image %>
  <%= text_field_tag :image %>
  </div>
  <div>
  <%= label_tag :description %>
  <%= text_field_tag :description %>
  </div>
  <%= submit_tag 'Submit This!!' %>
<% end %>